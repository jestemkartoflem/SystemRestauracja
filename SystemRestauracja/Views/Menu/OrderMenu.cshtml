                    <p>Cena za całe zamówienie: @zamowienie.CenaSuma</p>
                </div>
            }

        }
        <form class="col">
            <button class="btn btn-outline-success col" formmethod="post" type="submit" asp-action="AddZamowienie" asp-controller="Menu">Dodaj Zamówienie</button>
        </form>
    </div>
</div>

